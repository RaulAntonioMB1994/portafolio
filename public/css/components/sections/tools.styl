// Section Tools
.my-tools
	flex-flow column nowrap
	justify-content center
	align-items center
	&__container
		display flex
		flex-wrap wrap
		width 100%
		justify-content space-between
		margin-top 2rem
	&__tool
		display flex
		flex-direction column
		margin .5rem
		width 45%
		text-align justify
		border-bottom 3px solid $accent
		padding .5rem
		box-shadow 1px 2px 5px #dedede
		&__name
			font-size 1.2rem
			margin 0 0 .4rem
		&__description
			margin 0
